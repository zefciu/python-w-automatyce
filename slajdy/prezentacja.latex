\begin{frame}{II Prawo Kirchoffa}
    \[\sum_{k=1}^{n} U_k = 0\]
\end{frame}

\begin{frame}{Kalkulacja dla diody z rezystorem}
    \[U_s = U_r + U_d = U_s\]
    \[U_s = R \cdot I + U_d\]
    \[R = \frac{U_s - U_d}{I} \]
\end{frame}

\begin{frame}{Parametry diody}
    \begin{itemize}
    \item
        Dioda czerwona: 1,8V 2mA
    \item
        Dioda żółta: 1,9V 2mA
    \item
        Dioda zielona: 2,1V 8mA
    \end{itemize}

\end{frame}

